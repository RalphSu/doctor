<!DOCTYPE html>
<html>
<head>
  <title><%=t(:title)%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap.min", :media => "all" %>
  <%= stylesheet_link_tag    "pagination", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery-2.1.1.min" %>
  <%= javascript_include_tag "bootstrap.min" %>
  <%= csrf_meta_tags %>
</head>
<style type="text/css">
body { padding: 50px 50px 50px 50px;   }
</style>
<body>
	<nav class="navbar navbar-fixed-top navbar-inverse">
		<div class="container-fluid">
			<p class="navbar-brand"><%=t(:title)%></p>
		<div class="collapse navbar-collapse">
			<%unless session[:user_id]%>
				<ul class="nav navbar-nav navbar-right">
				<%signup=t(:signup)%>
				<%login=t(:login)%>
					<li><%= link_to signup , :signup, class: "nav_links"%></li>
					<li><%= link_to login , :login, class: "nav_links"%></li>	
				</ul>
			<%else%>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to t(:Home) , :home, class: "nav_links" %></li>
					<!-- <li><%= link_to t(:Profile) , :profile, class: "nav_links" %></li> -->
					<li><%= link_to t(:Doctors) , {:controller => "doctors", :action => "index"}, class: "nav_links" %></li>
					<li><%= link_to t(:Hospitals) , {:controller => "hospitals", :action => "index"}, class: "nav_links" %></li>
					<li><%= link_to t(:Logout) , :logout, class: "nav_links" %></li>	
				</ul>
			<%end%>
		</div>

		</div>
	</nav>
	<% if flash[:color]== "valid" %>
		<div class="valid_notice">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%else%>
		<div class="notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>
<%= yield %>


<hr/>
	<footer>
		<p><%=t(:footer_copyright)%></p>
	</footer>
</body>
</html>
